#!/usr/bin/env sh

echo "ğŸ” Running pre-commit checks (STRICT MODE)..."

# Run lint-staged for incremental checks on staged files
# This will fail on ANY Biome warnings or errors
echo "ğŸ“ Checking code quality with Biome (warnings = errors)..."
pnpm exec lint-staged || {
    echo "âŒ Code quality check failed. All Biome warnings and errors must be fixed."
    echo "ğŸ’¡ Run 'pnpm biome check --write' on your files to auto-fix what's possible"
    exit 1
}

# Run type checking on the entire project (excluding tests for now)
echo "ğŸ”§ Running TypeScript type check..."
pnpm exec tsc --noEmit --project tsconfig.precommit.json || {
    echo "âŒ Type checking failed. Please fix TypeScript errors before committing."
    echo "ğŸ’¡ Tip: Run 'pnpm type-check' to see all errors"
    exit 1
}

echo "âœ… All pre-commit checks passed!"

# Note: Unit tests are run separately via 'pnpm test'
