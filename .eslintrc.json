{
  "extends": [
    "next/core-web-vitals",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "prettier",
    "plugin:tailwindcss/recommended"
  ],
  "plugins": ["tailwindcss"],
  "rules": {
    "tailwindcss/no-custom-classname": "off",
    "tailwindcss/classnames-order": "off",
    "import/no-duplicates": "warn",
    "react/no-unescaped-entities": "error",
    "no-console": "error"
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "project": "./tsconfig.json"
      }
    }
  },
  "ignorePatterns": [
    "**/components/ui/**",
    "playwright-report/**",
    "test-results/**",
    ".next/**",
    "node_modules/**",
    "test-*.js",
    "test-*.ts"
  ],
  "overrides": [
    {
      "files": ["lib/logger/**/*.ts", "scripts/**/*.ts", "test-data/**/*.ts"],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
